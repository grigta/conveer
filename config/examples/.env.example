# =============================================
# Conveer Environment Configuration Example
# =============================================
# Copy this file to .env and fill in your values

# ===== Environment =====
# Options: development, staging, production
ENVIRONMENT=development

# ===== MongoDB =====
MONGODB_URI=mongodb://admin:password@localhost:27017/conveer?authSource=admin
MONGO_USER=admin
MONGO_PASSWORD=change_me_in_production

# ===== Redis =====
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=change_me_in_production
REDIS_DB=0

# ===== RabbitMQ =====
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ===== Security =====
# 32-byte key for AES-256 encryption (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
# JWT secret for API authentication
JWT_SECRET=your_jwt_secret_key_change_in_production

# ===== SMS Providers =====
# SMS-Activate
SMS_ACTIVATE_API_KEY=your_api_key
SMS_ACTIVATE_BASE_URL=https://api.sms-activate.org/stubs/handler_api.php

# 5sim (alternative)
FIVESIM_API_KEY=your_api_key
FIVESIM_BASE_URL=https://5sim.net/v1

# ===== Proxy Providers =====
# Provider 1 (example: Bright Data)
PROXY_PROVIDER_1_NAME=brightdata
PROXY_PROVIDER_1_API_URL=https://api.brightdata.com
PROXY_PROVIDER_1_API_KEY=your_api_key
PROXY_PROVIDER_1_AUTH_TYPE=bearer

# Provider 2 (example: Smartproxy)
PROXY_PROVIDER_2_NAME=smartproxy
PROXY_PROVIDER_2_API_URL=https://api.smartproxy.com
PROXY_PROVIDER_2_API_KEY=your_api_key
PROXY_PROVIDER_2_AUTH_TYPE=api_key

# ===== IPQS (IP Quality Score) =====
IPQS_API_KEY=your_ipqs_api_key

# ===== Telegram Bot =====
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ADMIN_IDS=123456789,987654321

# ===== Service Ports =====
API_GATEWAY_HTTP_PORT=8080
PROXY_SERVICE_HTTP_PORT=8081
PROXY_SERVICE_GRPC_PORT=50052
SMS_SERVICE_HTTP_PORT=8082
SMS_SERVICE_GRPC_PORT=50054
WARMING_SERVICE_HTTP_PORT=8083
WARMING_SERVICE_GRPC_PORT=50053
VK_SERVICE_GRPC_PORT=50055
TELEGRAM_SERVICE_GRPC_PORT=50056

# ===== Proxy Settings =====
PROXY_POOL_MIN_SIZE=20
PROXY_MAX_FRAUD_SCORE=70
PROXY_HEALTH_CHECK_INTERVAL=5m
PROXY_ROTATION_BEFORE_EXPIRY=24h

# ===== SMS Settings =====
SMS_CODE_TIMEOUT=120s
SMS_MAX_RETRIES=4
SMS_RETRY_BACKOFF=1m

# ===== Warming Settings =====
WARMING_MAX_PARALLEL_TASKS=100
WARMING_DEFAULT_SCENARIO=basic
WARMING_ACTIVE_HOURS_START=9
WARMING_ACTIVE_HOURS_END=23

# ===== Monitoring =====
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# ===== Logging =====
LOG_LEVEL=info
# Options: json, text
LOG_FORMAT=json

